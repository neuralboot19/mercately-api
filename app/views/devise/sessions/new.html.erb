<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= flash[:alert] %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <h2 class="sign mt-100">Iniciar sesi√≥n</h2>
          <div class="group">
            <%= f.email_field :email, class: 'input-devise', autofocus: true, autocomplete: "email", required: true %>
            <%= f.label :email, class: 'label-devise' %>
            <span class="bar"></span>
          </div>

          <div class="group">
            <%= f.password_field :password, class: 'input-devise', autocomplete: "current-password", required: true %>
            <%= f.label :password, class: 'label-devise' %>
            <span class="bar"></span>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="group">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me, class: 'f-left' %>
                Recordarme
              <% end %>
            </div>
          <% end %>

          <div class="btn-box">
            <%= f.submit 'Entrar', class: 'btn-btn btn-submit input-devise' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
