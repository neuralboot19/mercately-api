      if (usersPlus.val() > 0) {
        usersPlus.val(parseInt(usersPlus.val()) - 1);
        usersPlus.trigger("change");
      }
    });
    $('#total-sum-plus').on('click', function() {
      let usersPlus = $('#month-users-plus');
      if(usersPlus.val() === '') usersPlus.val(0);
      usersPlus.val(parseInt(usersPlus.val()) + 1);
      usersPlus.trigger("change");
    });

    function calcTotalPrice() {
      let subTotal = parseInt($('#month .price').text()) + parseInt($('#month .user-price').text()) * parseInt($('#month-users').val());
      let subTotalPlus = parseInt($('#month .plus-price').text()) + parseInt($('#month .user-price').text()) * parseInt($('#month-users-plus').val());
      if (document.getElementById('month_ml_checkbox').checked) subTotal += parseInt($('#month .ml-price').text());
      if (document.getElementById('month_hs_checkbox').checked) subTotal += parseInt($('#month .hs-price').text());
      if (document.getElementById('month_ml_checkbox_plus').checked) subTotalPlus += parseInt($('#month .ml-price').text());
      if (document.getElementById('month_hs_checkbox_plus').checked) subTotalPlus += parseInt($('#month .hs-price').text());
      if (document.getElementById('month_chatbot_checkbox').checked) {
        $('#month_chatbot_section').show();
        let price = 25;
        function adjustSubtotal(price) {
          $('#month .total-text').show();
          $('#month_chats_price').text(price);
          subTotal += price;
          subTotal = `$${subTotal}`;
          subTotalPlus += price;
          subTotalPlus = `$${subTotalPlus}`;
        }
        switch($('#month .chats-price').val()) {
          case '1':
            adjustSubtotal(price);
            break;
          case '2':
            price = 45;
            adjustSubtotal(price);
            break;
          case '3':
            price = 80;
            adjustSubtotal(price);
            break;
          case '4':
            price = 100;
            adjustSubtotal(price);
            break;
