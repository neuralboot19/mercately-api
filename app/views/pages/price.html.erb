      } else {
        $('#month_chatbot_section').hide();
        $('#month .total-text').show();
        subTotal = `$${subTotal}`;
        subTotalPlus = `$${subTotalPlus}`;
      }
      $('#month .total').html(subTotal);
      $('#month .total-plus').html(subTotalPlus);
    }
    calcTotalPrice();

    function calcIncludedUsers(usersInputId, defaultIncludedUsersId, totalId) {
      let usersPlus = $(usersInputId);
      let includedUsers = parseInt($(defaultIncludedUsersId).text());
      $(totalId).text(includedUsers + parseInt(usersPlus.val()));
      calcTotalPrice();
    }

