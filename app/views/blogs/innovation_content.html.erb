<div class="container">
  <hr>
  <p class="related-articles">Articulos relacionados</p>
  <div class="row">
    <% @documents.each_with_index do |doc, index| %>
      <div class="col-md-4 blog_grid_post_style">
        <div class="post-entry-wrapper">
          <div class="entry-image-post-thumb">
            <%= link_to blog_content_path(doc.uid), class: 'link_image featured-thumbnail' do %>
            <img src="<%= doc['funcionalidades.blog_index_image']&.url %>" class="post-entry-img" alt="">
            <div class="background_over_image"></div>
            <% end %>
            <span class="post-entry-category">
              <a class="category-link" style="background:#36c942" href="#">
                <%= doc['funcionalidades.category']&.as_text() %>
              </a>
            </span>
          </div>
          <div class="post-entry-content">
            <h3 class="post-entry-title">
              <%= link_to blog_content_path(doc.uid), class: 'link_image featured-thumbnail' do %>
                <%=  doc['funcionalidades.blog_title'].as_text() %>
              <% end %>
            </h3>
            <div class="">
              <span class="post-entry-date"><i class="far fa-clock"></i>
                <%= doc['funcionalidades.publish_date']&.value&.to_date %></span>
            </div>
            <div class="content-post-entry-grid">
              <%= doc['funcionalidades.blog_previos_content']&.as_html(link_resolver())&.html_safe %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
