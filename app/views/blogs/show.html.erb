<% content_for :meta_title, "#{@document['blogentry.meta_title']&.as_text()}" %>
<% content_for :meta_description, @document['blogentry.meta_description']&.as_text() %>
<% content_for :og_type, "#{@document['blogentry.og_type']&.as_text()}" %>
<% content_for :og_title, @document['blogentry.og_title']&.as_text() %>
<% content_for :og_url, "#{@document['blogentry.og_url']&.as_text()}" %>
<% content_for :og_image, @document['blogentry.og_image']&.url %>

<div class="inner-blog">
  <div class="inner-blog-landing-wrapper">
    <div class="inner-blog-landing" style="background-image: url(<%= @document['blogentry.blog_main_image'].url %>)">
    </div>
    <div class="single_post_entry_content">
      <span class="meta-category-small">
        <a class="single-post-entry-category" href="#">
          <%= @document['blogentry.category'].as_text() %>
        </a>
      </span>
      <h1 class="single-post-title-main">
        <%= @document['blogentry.blog_title'].as_text() %>
      </h1>
      <span class="single-post-meta-wrapper">
        <span class="single-post-date">
          <i class="far fa-clock"></i>
          <%= @document['blogentry.publish_date'].value.to_date %>
        </span>
      </span>
      </span>
    </div>
  </div>
</div>

