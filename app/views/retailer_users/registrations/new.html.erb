<% content_for :meta_title, "Regístrate en Mercately | Conexión con Whatsapp y Messenger" %>
<% content_for :meta_description, "Tu primer paso para tu comunicación onmicanal empieza aquí. Regístrate para utilizar el CRM con conexión oficial de Whatsapp al precio más competitivo." %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <div class="center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= hidden_field_tag :utm_source, params[:utm_source] %>
          <%= hidden_field_tag :utm_medium, params[:utm_medium] %>
          <%= hidden_field_tag :utm_term, params[:utm_term] %>
          <%= hidden_field_tag :utm_content, params[:utm_content] %>
          <%= hidden_field_tag :utm_campaign, params[:utm_campaign] %>
          <%= render "retailer_users/shared/error_messages", resource: resource %>
          <h2 class="mt-100">Registrarse</h2>

          <div class="group">
            <%= f.fields_for :retailer, f.object.retailer || f.object.build_retailer do |retailer| %>
              <%= retailer.text_field :name, value: @retailer_name, autofocus: true, placeholder: '', class: 'input-standarization' %>
              <%= retailer.label :name, 'Nombre del comercio' %>
              <span class="bar"></span>
            <% end %>
          </div>

          <fieldset class="fieldset mt-16">
            <legend>Información del Usuario</legend>
            <div class="group">
              <%= f.text_field :first_name, autofocus: true, class: 'input' %>
              <%= f.label :first_name, 'Nombre' %>
              <span class="bar"></span>
            </div>
            <div class="group">
              <%= f.text_field :last_name, class: 'input' %>
              <%= f.label :last_name, 'Apellido' %>
              <span class="bar"></span>
            </div>
          </fieldset>

          <div class="group">
            <%= f.text_field :email, autocomplete: "email", placeholder: '', class: 'input-standarization' %>
            <%= f.label :email, 'Correo' %>
            <span class="bar"></span>
          </div>

          <div class="group">
            <%= f.fields_for :retailer, f.object.retailer || f.object.build_retailer do |retailer| %>
              <%= retailer.text_field :retailer_number, autocomplete: "retailer_phone", placeholder: '', class: 'input-standarization', onkeypress: 'onlyNumber(event)' %>
              <%= retailer.label :retailer_number, 'Número de Teléfono (opcional)' %>
              <span class="bar"></span>
            <% end %>
          </div>

          <div class="group">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: '', class: 'input-standarization' %>
            <%= f.label :password, 'Contraseña' %>
            <span class="bar"></span>
          </div>

          <div class="group mb-16">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '', class: 'input-standarization' %>
            <%= f.label :password_confirmation, 'Confirme contraseña' %>
            <span class="bar"></span>
          </div>

          <div class="group my-16">
            <%= f.check_box :agree_terms, class: 'f-left w-auto', style: 'width: auto;' %>
            <%= f.label :agree_terms, 'Acepto los', class: 'p-static' %>
            <%= link_to 'términos y condiciones', terms_path, target: :_blank, class: 'link-register-terms' %>
          </div>

          <div class="btn-box">
            <%= f.submit 'Empezar', class: 'btn-btn btn-submit w-100' %>
          </div>
        <% end %>

        <%= render "retailer_users/shared/links" %>
      </div>
    </div>
  </div>
</div>
