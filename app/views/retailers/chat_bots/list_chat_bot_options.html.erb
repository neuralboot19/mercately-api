<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Opciones del ChatBot</h1>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to retailers_chat_bots_path, class: 'btn btn--cta' do %>
              <i class="fas fa-arrow-left mr-5"></i>
              Atr치s
            <% end %>
            <%= link_to edit_retailers_chat_bot_path(current_retailer, @chat_bot), class: 'btn btn--cta' do %>
              <i class="fas fa-edit mr-5"></i>
              Configuraci칩n
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <div class="box">
            <fieldset class="col-xs-12 fieldset mt-16 row">
              <legend>Informaci칩n del ChatBot</legend>
              <div class="row w-100">
                <div class="col-xs-12 mt-16">
                  <label class="c-grey fs-14">Nombre:</label> <span class="c-secondary fs-14"><%= @chat_bot.name %></span>
                </div>
              </div>
            </fieldset>
            <div class="row">
              <fieldset class="col-xs-12 col-md-8 fieldset mt-16 mr-0 ml-0">
                <legend>Configurar Opciones del ChatBot</legend>
                <input type="hidden" id="slug-id" value="<%= params[:slug] %>" />
                <input type="hidden" id="cb-web-id" value="<%= @chat_bot.web_id %>" />
                <div id="options-tree">
                </div>
              </fieldset>
              <div class="col-xs-12 col-md-4 p-0">
                <fieldset class="fieldset mt-16 mr-0 ml-0 chat-preview-container">
                <legend>Vista Previa <small>(Selecciona una opci칩n del esquema)</small></legend>
                  <%= render partial: 'chat_preview' %>
                </fieldset>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script charset="utf-8">
  document.addEventListener("DOMContentLoaded", function() {
    chatBotWebId = document.getElementById('cb-web-id').value;

    if (chatBotWebId) {
      searchOptions();
    }
  });
</script>

<script src="<%= asset_path 'retailers/chat_bots/chat_bots.js' %>" charset="utf-8"></script>
