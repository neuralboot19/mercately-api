<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline index__title">ChatBots</h1>
          <div class="index__desc">
            Lista de ChatBots
          </div>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to new_retailers_chat_bot_path, class: 'btn btn--cta' do %>
              <i class="fas fa-plus mr-5"></i>
              Crear ChatBot
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down">
              <div class="col-sm-11">Nombre</div>
              <div class="col-sm-1"></div>
            </div>
            <% @chat_bots.each do |chat_bot| %>
              <div class="divider"></div>
              <div class="table__item row middle-xs">
                <div class="col-xs-11 col-sm-11">
                  <%= chat_bot.name %>
                </div>
                <div class="col-xs-1 table__action-dots p-0">
                  <label class="item__dropdown d-inline">
                    <a class="dropdown__button middle t-center no-style" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to edit_retailers_chat_bot_path(current_retailer, chat_bot), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Configuraci√≥n
                        <% end %>
                      </li>
                      <li>
                        <%= link_to retailers_chat_bot_list_chat_bot_options_path(current_retailer, chat_bot), class: 'c-black no-style' do %>
                          <i class="fas fa-cog mr-8"></i>
                          Configurar Opciones
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
              </div>
            <% end %>
            <div class="row middle-xs center-xs">
              <div class="col-xs-12">
                <%= paginate @chat_bots %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
