<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Calendario de eventos</h1>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div id="month-calendar"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script charset="utf-8">
document.addEventListener('DOMContentLoaded', function() {
  var calendarIndex = document.getElementById('month-calendar');
  var calendar = new FullCalendar.Calendar(calendarIndex, {
    timeZone: 'UTC',
    initialView: 'dayGridMonth',
    headerToolbar: {
      start: 'today',
      center: 'title',
      end: 'prev,next'
    },
    titleFormat: { year: 'numeric', month: 'long' },
    buttonText: {
      today: 'Hoy'
    },
    locale: 'es',
    slotLabelInterval: '00:30',
    slotLabelFormat: {
      hour: '2-digit',
      minute: '2-digit',
      omitZeroMinute: false,
      meridiem: 'short'
    },
    nowIndicator: true,
    dayMaxEvents: true,
    events: `/retailers/${window.location.pathname.split('/')[2]}/calendar_events.json`,
    select: function(info) {
      alert('selected ' + info.startStr + ' to ' + info.endStr);
    },
  });
  calendar.render();
});
</script>
