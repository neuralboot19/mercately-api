<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-12">
          <h1 class="d-inline name">Integraciones</h1>
          <div class="index__desc">
            Plataformas
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-md-6 integration-item-container">
          <div class="col-xs-12 integration-logo-container">
            <%= image_tag 'mercado-libre-logo-5.png', class: 'logo-integration-platform' %>
          </div>
          <div class="col-xs-12 col-md-12 btn-box">
            <% if current_retailer.connected_to_ml? %>
              <p class="connected-text">Conectado con Mercado Libre</p>
              <%= button_to('Importar productos de Mercado Libre', retailers_mercadolibre_import_path(current_retailer), {method: :get, class: 'general-button btn-btn btn-submit'}) %>
            <% else %>
              <%= button_to('Conectar con Mercado Libre', ec_auth_url, class: 'general-button btn-btn btn-submit') %>
            <% end %>
          </div>
        </div>
      </div>    
    </div>
  </div>
</div>
