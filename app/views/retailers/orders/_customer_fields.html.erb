<div class="nested-fields box">
  <div class="row my-16 bottom-xs">
    <fieldset class="mt-16 w-100">
      <legend>Información básica de cliente</legend>
      <div class="w-100">
        <div class="row col-xs-12">
          <div class="col-xs-12 index__ctas">
            <a class="btn btn--no-border f-right" onclick="hideClientForm()">
              <i class="fas fa-times mr-5"></i>
              Cancelar
            </a>
          </div>
          <div class="col-xs-12 col-md-6 my-16">
            <%= f.label :first_name, 'Nombre' %>
            <%= f.text_field :first_name, class: 'input', disabled: @hide_client_form %>
          </div>
          <div class="col-xs-12 col-md-6 my-16">
            <%= f.label :last_name, 'Apellido' %>
            <%= f.text_field :last_name, class: 'input', disabled: @hide_client_form %>
          </div>
        </div>
        <div class="row col-xs-12">
          <div class="col-xs-12 col-md-6 my-16">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'input validate-email validate-required', disabled: @hide_client_form %>
            <i class="validation-msg"></i>
          </div>
          <div class="col-xs-12 col-md-6 my-16">
            <%= f.label :phone, 'Teléfono' %>
            <%= f.text_field :phone, class: 'input', disabled: @hide_client_form %>
          </div>
          <% if @order.id.blank? %>
            <input type="hidden" name="order[customer_attributes][id]" id="order_customer_attributes_id">
          <% end %>
          <% if @hide_client_form %>
            <input type="hidden" value="<%= current_retailer.id %>" name="order[customer_attributes][retailer_id]" id="order_customer_attributes_retailer_id" disabled="disabled">
          <% else %>
            <input type="hidden" value="<%= current_retailer.id %>" name="order[customer_attributes][retailer_id]" id="order_customer_attributes_retailer_id">
          <% end %>
        </div>
      </div>
    </fieldset>
  </div>
</div>
