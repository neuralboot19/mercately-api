<div class="container-fluid reduced-container-padding mb-16">
  <div class="page-container">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <%= link_to retailers_orders_path(current_retailer, status: 'all'), class: 'back-link' do %>
            <i class="fas fa-caret-left mr-5"></i>
            Ordenes
          <% end %>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <h1 class="d-inline form-container_header-title">Crear orden</h1>
          <%= render 'form', order: @order %>
        </div>
      </div>
    </div>
  </div>
</div>
<script charset="utf-8">
  document.addEventListener("DOMContentLoaded", function() {
    document.getElementById('add_customer').click();
    <% if current_retailer.customers.active.blank? %>
      document.getElementById('customer_cancel').style.display = 'none';
    <% end %>
  });
</script>
