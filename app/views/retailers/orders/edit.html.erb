<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Editar venta</h1>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to retailers_orders_path(current_retailer.slug, current_retailer.web_id, status: @order.status), class: 'btn btn--cta' do %>
              <i class="fas fa-arrow-left mr-5"></i>
              Volver
            <% end %>
            <%= link_to retailers_order_path(current_retailer.slug, current_retailer.web_id, @order), class: 'btn btn--cta' do %>
              <i class="fas fa-eye mr-5"></i>
              Ver venta
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <%= render 'form', order: @order %>
        </div>
      </div>
    </div>
  </div>
</div>
