<div class="nested-fields box association-item">
  <div class="row my-16 middle-xs divider t-center pb-16">
    <div class="col-xs-12 col-sm-2">
      <div class="row middle-xs">
        <div class="col-xs-12">
          <div class="product_code"></div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="row middle-xs">
        <div class="col-xs-6">
          <div class="products__img">
            <img src="" style="display: none;" class="product_img"/>
          </div>
        </div>
        <div class="col-xs-6 t-left">
          <div class="product_title"></div>
        </div>
      </div>
      <%= f.hidden_field :product_id, class: 'input validate-required product_id', onchange: 'getProductInfo(this);' %>
    </div>
    <div class="col-xs-12 col-sm-2">
      <%= f.label :quantity, 'Cantidad' %>
      <%= f.text_field :quantity, class: 'input product_quantity validate-required', onkeypress: 'onlyNumber(event)' %>
      <i class="validation-msg">&nbsp;</i>
    </div>
    <div class="col-xs-12 col-sm-2">
      <%= f.label :unit_price, '&nbsp;'.html_safe %>
      <%= f.text_field :unit_price, class: 'input product_price validate-required', onkeyup: 'editPrice(this);' %>
      <i class="validation-msg">&nbsp;</i>
    </div>
    <div class="col-xs-12 col-sm-2">
      <div class="product_subtotal"></div>
    </div>
    <div class="col-xs-12 col-sm-1 center-xs end-sm p-0 mb-24">
      <div>
        &nbsp;
      </div>
      <%= link_to_remove_association f, class: 'btn btn--destroy d-inline-block m-0 remove_order_item' do %>
        Remover
      <% end %>
    </div>
  </div>
</div>
