<div class="nested-fields box">
  <div class="row my-16 bottom-xs divider pb-16">
    <div class="col-xs-12 col-sm-4">
      <%= f.label :product_id, 'Producto' %>
      <%= f.select :product_id, current_retailer.products.status_active.pluck(:title, :id), { include_blank: false }, class: 'input validate-required', onchange: 'getProductInfo(this);' %>
      <i class="validation-msg">&nbsp;</i>
    </div>
    <div class="col-xs-12 col-sm-3">
      <%= f.label :quantity, 'Cantidad' %>
      <%= f.text_field :quantity, class: 'input product_quantity validate-required', onkeypress: 'onlyNumber(event)' %>
      <i class="validation-msg">&nbsp;</i>
    </div>
    <div class="col-xs-12 col-sm-3">
      <%= f.label :unit_price, 'Precio unitario' %>
      <%= f.text_field :unit_price, class: 'input product_price validate-required', onkeyup: 'editPrice(this);' %>
      <i class="validation-msg">&nbsp;</i>
    </div>
    <div class="col-xs-12 col-sm-2 center-xs end-sm p-0 mb-24">
      <%= link_to_remove_association f, class: 'btn btn--destroy d-inline-block m-0 remove_order_item association-item' do %>
        <i class="fas fa-times mr-5"></i>
        Remover item
      <% end %>
    </div>
  </div>
</div>
