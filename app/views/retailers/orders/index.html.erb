<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.status %></td>
        <td><%= order.customer_id %></td>
        <td><%= link_to 'Show', retailers_order_path(@retailer.slug, order) %></td>
        <td><%= link_to 'Edit', edit_retailers_order_path(@retailer.slug, order) %></td>
        <td><%= link_to 'Destroy', retailers_order_path(@retailer.slug, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

