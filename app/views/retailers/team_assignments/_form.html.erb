<div class="box">
  <div class="row">
    <%= form_for([:retailers, @team_assignment], url: @team_assignment.new_record? ? retailers_team_assignments_path(current_retailer, @team_assignment) : retailers_team_assignment_path(current_retailer, @team_assignment), local: true, html: { class: 'validate-form p-0 col-xs-12' }) do |f| %>
      <div class="box">
        <fieldset class="col-xs-12 fieldset mt-16 row">
          <legend>Informaci칩n del Equipo</legend>
          <div class="row w-100">
            <div class="col-xs-12 col-md-12 mb-8 my-16">
              <%= f.label :name, 'Nombre' %><br/>
              <%= f.text_field :name, class: 'input validate-required' %>
              <i class="validation-msg"></i>
            </div>
          </div>
          <div class="row w-100">
            <div class="col-xs-12 col-md-6 mb-8 my-16">
              <%= f.label :active_assignment, 'Activar asignaci칩n para el equipo?' %><br/>
              <%= f.check_box :active_assignment %>
            </div>
            <div class="col-xs-12 col-md-6 mb-8 my-16">
              <%= f.label :default_assignment, 'Asignar por defecto a este equipo?' %><br/>
              <%= f.check_box :default_assignment %>
            </div>
          </div>
          <fieldset class="fieldset mt-20 w-100">
            <legend>Miembros del Equipo</legend>
            <div id="validate-unique-error" class="d-none">
              <i class="validation-msg">Los agentes pueden ser agregados s칩lo una vez por equipo</i><br />
            </div>
            <div id="agent_teams" class="w-100">
              <%= f.fields_for :agent_teams do |at| %>
                <%= render "agent_teams_fields", f: at %>
              <% end %>
              <div id="agent-teams-container">
              </div>
              <div class="my-20">
                <%= link_to_add_association f, :agent_teams, partial: 'new_agent_teams_fields', id: 'add_agent_teams', class: 'btn btn--cta' do %>
                  <i class="fas fa-plus mr-5"></i>
                  A침adir miembro
                <% end %>
              </div>
            </div>
          </fieldset>
          <div class="btn-box col-xs-12">
            <%= f.submit 'Guardar', class: 'btn-btn btn-submit', data: { disable_with: false } %>
          </div>
        </fieldset>
      </div>
    <% end %>
  </div>
</div>

<script charset="utf-8">
  <% if @team_assignment&.errors&.any? %>
    <% @team_assignment.errors.each do |attribute, message| %>
      showtoast("<%= message %>")
    <% end %>
  <% end %>
</script>

<script src="<%= asset_path 'retailers/team_assignments/team_assignments.js' %>" charset="utf-8"></script>
