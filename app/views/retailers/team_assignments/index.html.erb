<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline index__title">Equipos de Asignación</h1>
          <div class="index__desc">
            Lista de Equipos
          </div>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to new_retailers_team_assignment_path, class: 'btn btn--cta' do %>
              <i class="fas fa-plus mr-5"></i>
              Crear Equipo
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down">
              <div class="col-sm-11">Nombre</div>
              <div class="col-sm-1"></div>
            </div>
            <% @team_assignments.each do |team_assignment| %>
              <div class="divider"></div>
              <div class="table__item row middle-xs">
                <div class="col-xs-11 col-sm-11">
                  <%= team_assignment.name %>
                </div>
                <div class="col-xs-1 table__action-dots p-0">
                  <label class="item__dropdown d-inline">
                    <a class="dropdown__button middle t-center no-style" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_team_assignment_path(current_retailer, team_assignment), class: 'c-black no-style' do %>
                          <i class="far fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_retailers_team_assignment_path(current_retailer, team_assignment), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Editar
                        <% end %>
                      </li>
                      <li>
                        <%= link_to retailers_team_assignment_path(current_retailer, team_assignment), method: :delete, data: { confirm: '¿Estás seguro de eliminar el equipo?' }, class: 'c-red no-style' do %>
                          <i class="fas fa-trash-alt mr-8"></i>
                          Eliminar
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
              </div>
            <% end %>
            <div class="row middle-xs center-xs">
              <div class="col-xs-12">
                <%= paginate @team_assignments %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
