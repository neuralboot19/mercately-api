<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline index__title">Preguntas</h1>
          <div class="index__desc">
            Lista de preguntas
          </div>
        </div>
      </div>
    </div>

    <div class="worm container-fluid">
      <div class="row center-xs start-sm">
        <div class="col-xs-12">
          <div class="worm__btn <%= 'worm__btn--selected' if current_page? (retailers_questions_path(current_retailer, answered: false)) %>">
            <%= link_to 'Sin responder', retailers_questions_path(current_retailer, answered: false) %>
          </div
          ><div class="worm__btn <%= 'worm__btn--selected' if current_page? (retailers_questions_path(current_retailer, answered: true)) %>">
            <%= link_to 'Respondidas', retailers_questions_path(current_retailer, answered: true) %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down center-sm">
              <div class="col-sm-1">Usuario</div>
              <div class="col-sm-3">Producto</div>
              <div class="col-sm-4"></div>
              <div class="col-sm-2"></div>
              <div class="col-sm-1">Fecha</div>
              <div class="col-sm-1"></div>
            </div>
            <% @questions.each do |question| %>
              <div class="divider"></div>
              <div class="table__item row">
                <div class="col-xs-10 col-sm-1 t-center hide-on-sm-and-down">
                  <div class="truncate">
                    <%= question.customer.email.presence || question.customer.meli_nickname %>
                  </div>
                </div>
                <div class="col-xs-10 col-sm-3 t-center">
                  <%= question.product.title %>
                </div>
                <div class="col-xs-2 table__action-dots p-0 hide-on-md-and-up">
                  <label class="item__dropdown d-inline">
                    <a class="dropdown__button middle t-center no-style" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_question_path(current_retailer, question), class: 'c-black no-style' do %>
                          <i class="fas fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
                <div class="col-xs-12 col-sm-4 c-grey truncate">
                  <br class="hide-on-md-and-up"/>
                  <span class="c-secondary">
                    Pregunta:
                  </span> <%= question.question %>
                  <br/>
                  <br/>
                  <span class="c-secondary">
                    Respuesta:
                  </span> <%= question.answer %>
                </div>
                <div class="col-xs-12 col-sm-2 t-center">
                  <% if question.answered %>
                    <b class="cookie__box cookie__box__green px-5">Respondido</b>
                  <% elsif question.date_read.blank? %>
                    <b class="cookie__box cookie__box__blue px-5">Por Leer</b>
                  <% else %>
                    <b class="cookie__box cookie__box__green px-5">Visto</b>
                  <% end %>
                </div>
                <div class="col-xs-12 col-sm-1 t-center">
                  <%= show_date(question.created_at) %>
                </div>
                <div class="col-xs-12 hide-on-1080-and-down products__actions col-sm-1 t-center">
                  <%= link_to retailers_question_path(current_retailer, question), class: 'c-black no-style' do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                </div>
                <div class="hide-on-sm-and-down hide-on-2k m-auto">
                  <label class="item__dropdown dropdown d-inline">
                    <a class="dropdown__button midd" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_question_path(current_retailer, question), class: 'c-black no-style' do %>
                          <i class="fas fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
              </div>
            <% end %>
            <div class="row middle-xs center-xs">
              <div class="col-xs-12">
                <%= paginate @questions %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
