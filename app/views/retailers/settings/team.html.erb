<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Equipo</h1>
          <div class="index__desc">
            Invita a tu equipo de trabajo
          </div>

          <% if current_retailer_user.retailer_admin %>

            <%= form_for @user, url: invite_team_member_path(current_retailer), html: { class: 'validate-form col-xs-12 p-0' } do |f| %>
              <fieldset class="fieldset mt-16">

                <div class="my-16">
                  <%= f.label :email %>
                  <%= f.text_field :email, class: 'input validate-email validate-required' %>
                  <i class="validation-msg"></i>
                </div>
              </fieldset>
              <div class="btn-box col-xs-12">
                <%= f.submit 'Guardar', class: 'btn-btn btn-submit', data: { disable_with: false } %>
              </div>
            <% end %>
          <% end %>


        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down center-sm">
              <div class="col-sm-3">Email</div>
              <div class="col-sm-4">Fecha de invitaci√≥n</div>
              <div class="col-sm-3">Estado</div>
              <div class="col-sm-2"></div>
            </div>

            <% @team.each do |member| %>
              <div class="divider"></div>
              <div class="table__item row middle-xs">
                <div class="col-xs-4 col-sm-3">
                  <div class="t-center"><%= member.email %></div>
                </div>
                <div class="col-xs-4 col-sm-4 c-grey">
                  <div class="t-center truncate">11/25/19</div>
                </div>
                <div class="col-xs-4 col-sm-3">
                  <div class="t-center"><%= member.invitation_accepted_at ? 'Aceptado' : 'Invitado' %></div>
                </div>
                <div class="col-xs-4 col-sm-2 c-grey">
                  <% unless member.invitation_accepted_at %>
                    <%= link_to 'Reinvitar', reinvite_team_member_path(current_retailer, user: member), method: :post %>
                    <br />
                  <% end %>
                  <%= link_to 'Remover', remove_team_member_path(current_retailer, user: member), method: :post %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>


  </div>
</div>

