<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline index__title">Plantillas</h1>
          <div class="index__desc">
            Lista de plantillas
          </div>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to new_retailers_template_path, class: 'btn btn--cta' do %>
              <i class="fas fa-plus mr-5"></i>
              Crear plantilla
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down center-sm">
              <div class="col-sm-4 t-left">Nombre</div>
              <div class="col-sm-6">Texto</div>
              <div class="col-sm-1">Fecha</div>
              <div class="col-sm-1"></div>
            </div>
            <% @templates.each do |template| %>
              <div class="divider"></div>
              <div class="table__item row">
                <div class="col-xs-10 col-sm-4">
                  <%= template.title %>
                </div>
                <div class="col-xs-2 table__action-dots p-0 hide-on-md-and-up">
                  <label class="item__dropdown d-inline">
                    <div class="dropdown__button middle">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </div>

                    <input type="checkbox" class="dropdown__input"/>

                    <ul class="dropdown__menu">
                      <li>
                      <%= link_to image_tag('dashboard/show-icon-index.png', class: 'w-20 mr-8'), retailers_template_path(current_retailer, template) %>
                      <%= link_to image_tag('dashboard/edit-icon-index.png', class: 'w-20 mr-8'), edit_retailers_template_path(current_retailer, template) %>
                      <%= link_to image_tag('dashboard/destroy-icon-index.png', class: 'w-20 mr-8'), retailers_template_path(current_retailer, template), method: :delete, data: { confirm: 'Are you sure?' } %>
                        <%= link_to retailers_template_path(current_retailer, template), class: 'c-black no-style' do %>
                          <i class="fas fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
                <div class="col-xs-12 col-sm-6 c-grey">
                  <br class="hide-on-md-and-up"/>
                  <%= template.answer %>
                </div>
                <div class="col-xs-10 col-sm-1 t-center">
                  <%= show_date(template.created_at) %>
                </div>
                <div class="col-xs-12 hide-on-1080-and-down products__actions col-sm-1 t-center">
                  <%= link_to retailers_template_path(current_retailer, template), class: 'c-black no-style' do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                </div>
                <div class="hide-on-sm-and-down hide-on-2k m-auto">
                  <label class="item__dropdown dropdown d-inline">
                    <a class="dropdown__button midd" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_template_path(current_retailer, template), class: 'c-black no-style' do %>
                          <i class="fas fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_retailers_template_path(current_retailer, template), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Editar
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row middle-xs center-xs">
    <div class="col-xs-12">
      <%= paginate @templates %>
    </div>
  </div>
</div>
