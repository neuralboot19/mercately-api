<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Plantilla</h1>
        </div>
        <div class="col-xs-12 col-md-8 mt-16 t-right button-sm-and-down">
          <%= link_to retailers_templates_path, class: 'btn btn--cta' do %>
            <i class="fas fa-arrow-left mr-5"></i>
            Volver
          <% end %>
          <%= link_to edit_retailers_template_path(current_retailer.slug, current_retailer.web_id, @template), class: 'btn btn--cta' do %>
            <i class="far fa-edit mr-5"></i>
            Editar
          <% end %>
        </div>
      </div>
    </div>
    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <fieldset class="fieldset mt-16">
            <legend>Información de la plantilla</legend>
            <div class="box pt-25">
              <div class="row">
                <div class="col-xs-12 col-sm-3">
                  <p>
                    <label class="c-grey fs-14">Descripción:</label> <span class="c-secondary fs-14"><%= @template.title %></span>
                  </p>
                </div>
                <div class="col-xs-12 col-sm-6">
                  <p>
                    <label class="c-grey fs-14">Respuesta:</label> <span class="c-secondary fs-14"><%= @template.answer %></span>
                  </p>
                </div>
                <div class="col-xs-12 col-sm-3">
                  <p>
                    <label class="c-grey fs-14">Tipo:</label> <span class="c-secondary fs-14">
                      <% if @template.enable_for_questions %>
                        Pregunta
                      <% end %>
                      <% if @template.enable_for_chats %>
                        Chat
                      <% end %>
                    </span>
                  </p>
                </div>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
