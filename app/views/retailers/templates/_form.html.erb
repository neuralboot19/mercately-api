<div class="box">
  <div class="row">
    <%= form_for([:retailers, @template], url: @template.new_record? ? retailers_templates_path(current_retailer, @template) : retailers_template_path(current_retailer, @template), local: true, html: { class: 'p-0 col-xs-12' }) do |f| %>
      <div class="box">
        <div class="row">
          <fieldset class="col-xs-12 fieldset mt-16">
            <legend>Información de la plantilla</legend>
            <div class="mb-8 my-16">
              <%= f.label :title, 'Título' %><br/>
              <%= f.text_field :title, class: 'input' %>
            </div>

            <div class="row">
              <div class="mb-8 my-16 col-xs-12 col-sm-6">
                <%= f.label :enable_for_questions, 'Para preguntas' %>
                <%= f.check_box :enable_for_questions, class: 'input' %>
                <p class="note-archived"><i>Nota: Para preguntas, no se debe incluir información de contacto como teléfonos, 
                direcciones exactas o nombres personales</i></p>
              </div>

              <div class="mb-8 my-16 col-xs-12 col-sm-6">
                <%= f.label :enable_for_chats, 'Para chats', class: 'p-static' %>
                <%= f.check_box :enable_for_chats, class: 'input' %>
              </div>
            </div>

            <div class="mb-8 my-16">
              <%= f.label :answer, 'Respuesta' %>
              <%= f.text_area :answer, placeholder: 'Texto de respuesta', class: 'input h-77' %>
            </div>

            <div class="btn-box col-xs-12">
              <%= f.submit 'Guardar', class: 'btn-btn btn-submit' %>
            </div>
          </fieldset>
        </div>
      </div>
    <% end %>
  </div>
</div>
