<div class="box">
  <div class="row">
    <%= form_for([:retailers, @template], url: @template.new_record? ? retailers_templates_path(@retailer, @template) : retailers_template_path(@retailer, @template), local: true, html: { class: 'dropzone col-xs-12' }) do |f| %>
      <div class="box">
        <div class="row">
          <div class="group col-xs-12">
            <%= f.text_field :title, placeholder: '' %>
            <%= f.label :title %>
            <span class="bar"></span>
          </div>

          <div class="group col-xs-12">
            <%= f.text_area :answer, placeholder: '' %>
            <%= f.label :answer %>
            <span class="bar"></span>
          </div>

          <div class="btn-box col-xs-12">
            <%= f.submit 'Guardar', class: 'btn-btn btn-submit' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
