<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline index__title">Campos personalizados</h1>
          <div class="index__desc">
            Lista de campos personalizados
          </div>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to new_retailers_customer_related_field_path, class: 'btn btn--cta' do %>
              <i class="fas fa-plus mr-5"></i>
              Crear campo
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down">
              <div class="col-sm-5">Nombre</div>
              <div class="col-sm-4">Identificador</div>
              <div class="col-sm-2">Tipo</div>
              <div class="col-sm-1"></div>
            </div>
            <% @customer_related_fields.each do |customer_related_field| %>
              <div class="divider"></div>
              <div class="table__item row middle-xs">
                <div class="col-xs-4 col-sm-5">
                  <div class=""><%= customer_related_field.name %></div>
                </div>
                <div class="col-xs-4 col-sm-4">
                  <div class=""><%= customer_related_field.identifier %></div>
                </div>
                <div class="col-xs-2 col-sm-2">
                  <div class=""><%= CustomerRelatedField.enum_translation(:field_type, customer_related_field.field_type) %></div>
                </div>
                <div class="hide-on-sm-and-down m-auto">
                  <label class="item__dropdown dropdown d-inline">
                    <a class="dropdown__button midd" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <%= render partial: 'index_options', locals: { customer_related_field: customer_related_field } %>
                  </label>
                </div>
                <div class="col-xs-2 col-sm-1 table__action-dots p-0 hide-on-md-and-up">
                  <label class="item__dropdown d-inline">
                    <div class="dropdown__button middle">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </div>

                    <input type="checkbox" class="dropdown__input"/>

                    <%= render partial: 'index_options', locals: { customer_related_field: customer_related_field }  %>
                  </label>
                </div>
              </div>
            <% end %>
            <div class="row middle-xs center-xs">
              <div class="col-xs-12">
                <%= paginate @customer_related_fields %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bubble hide-on-pc">
  <%= link_to new_retailers_customer_related_field_path do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>
