<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Campo personalizado</h1>
        </div>
        <div class="col-xs-12 col-md-8 mt-16 t-right button-sm-and-down">
          <%= link_to retailers_customer_related_fields_path, class: 'btn btn--cta' do %>
            <i class="fas fa-arrow-left mr-5"></i>
            Volver
          <% end %>
          <%= link_to edit_retailers_customer_related_field_path(current_retailer, @customer_related_field), class: 'btn btn--cta' do %>
            <i class="far fa-edit mr-5"></i>
            Editar
          <% end %>
          <%= link_to retailers_customer_related_field_path(current_retailer, @customer_related_field), method: :delete, data: { confirm: '¿Estás seguro de eliminar el campo?' }, class: 'btn btn--destroy' do %>
            <i class="far fa-trash-alt mr-5"></i>
            Eliminar
          <% end %>
        </div>
      </div>
    </div>
    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <fieldset class="fieldset mt-16">
            <legend>Información del campo</legend>
            <div class="box pt-25">
              <div class="row">
                <div class="col-xs-12 col-sm-4">
                  <p>
                    <label class="c-grey fs-14">Nombre:</label><br /><span class="c-secondary fs-14"><%= @customer_related_field.name %></span>
                  </p>
                </div>
                <div class="col-xs-12 col-sm-4">
                  <p>
                    <label class="c-grey fs-14">Identificador:</label><br /><span class="c-secondary fs-14"><%= @customer_related_field.identifier %></span>
                  </p>
                </div>
                <div class="col-xs-12 col-sm-4">
                  <p>
                    <label class="c-grey fs-14">Tipo:</label><br /><span class="c-secondary fs-14"><%= CustomerRelatedField.enum_translation(:field_type, @customer_related_field.field_type) %></span>
                  </p>
                </div>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
