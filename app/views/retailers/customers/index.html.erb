<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Clientes</h1>
          <div class="index__desc">
            Lista de clientes
          </div>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to new_retailers_customer_path, class: 'btn btn--cta' do %>
              <i class="fas fa-plus mr-5"></i>
              Crear cliente
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="box">
      <div class="row mt-10">
        <div class="col-xs-12">
          <%= search_form_for @q, url: retailers_customers_path do |f| %>
            <div class="box">
              <div class="row">
                <div class="col-xs-12 col-sm-1 px-0 fs-14 no-style-filter">
                  Buscar por:
                </div>
                <div class="col-xs-12 col-sm-4 px-0">
                  <%= f.search_field :first_name_or_last_name_or_phone_or_email_cont, class: 'input search-field', placeholder: 'Busca por nombres, email o teléfono' %>
                </div>
                <div class="col-xs-12 col-sm-2 mt-5 pl-0 fs-14 no-style-filter t-right ordering-label">
                  Ordenar por:
                </div>
                <div class="col-xs-12 col-sm-3 px-0 mt-5 fs-14 no-style-filter p-relative">
                  <%= f.hidden_field :s, value: params[:q]&.[]('s').blank? ? 'created_at desc' : params[:q][:s] %>
                  <label class="item__dropdown d-inline">
                    <a class="dropdown__button middle" tabindex="-1" href="#!" id="order-link">
                      <span id="selected-order"></span>&nbsp;<i class="fas fa-sort"></i>
                    </a>

                    <ul class="dropdown__menu w-100" id="order-list">
                      <% customer_ordering_options.each do |ord| %>
                        <li value="<%= ord[:value] %>">
                          <%= ord[:label] %>
                        </li>
                      <% end %>
                    </ul>
                  </label>
                </div>
                <div class="col-xs-12 col-sm-2"></div>
                <div class="col-xs-12 col-sm-1 px-0 fs-14 no-style-filter">
                  Etiquetas:
                </div>
                <div class="col-xs-12 col-sm-4 px-0 mt-5 fs-14 no-style-filter">
                  <%= f.select :customer_tags_tag_id_in, retailer_selectable_tags(current_retailer), { include_blank: true }, class: 'input', multiple: true %>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12 px-0 mt-15">
                  <%= f.submit 'Buscar', class: 'btn-btn btn-submit h-34' %>
                  <%= link_to 'Exportar', retailers_export_customers_path(@export_params), method: :post, class: 'btn-btn btn-submit f-right btn-input' %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down center-sm">
              <div class="col-sm-2">Nombres</div>
              <div class="col-sm-1">Email</div>
              <div class="col-sm-2">Teléfono</div>
              <div class="col-sm-3">Ventas</div>
              <div class="col-sm-1">Total $</div>
              <div class="col-sm-2">Notas</div>
              <div class="col-sm-1"></div>
            </div>
            <% @customers.each do |customer| %>
              <div class="divider"></div>
              <div class="table__item row middle-xs">
                <div class="col-xs-4 col-sm-2">
                  <div class="t-center"><%= customer.full_names %></div>
                </div>
                <div class="col-xs-4 col-sm-1 c-grey">
                  <div class="t-center truncate"><%= customer.email %></div>
                </div>
                <div class="hide-on-md-and-up hide-on-2k m-auto">
                  <label class="item__dropdown dropdown d-inline">
                    <a class="dropdown__button middle t-center no-style" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_customer_path(current_retailer, customer), class: 'c-black no-style' do %>
                          <i class="far fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_retailers_customer_path(current_retailer, customer), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Editar
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
                <div class="col-xs-4 col-sm-2 c-grey">
                  <div class="t-center truncate">
                    <% if customer.country_id.present? && customer.phone.present? %>
                      <span class="mr-5"><%= customer.emoji_flag %></span>
                    <% end %>
                    <%= customer.phone %>
                  </div>
                  <% if can_send_whatsapp_notification?(current_retailer_user, customer) %>
                    <div class="t-center"><label for="modal--toggle-index" class="request-demo-label ws-contact"
                      data-customer_full_names="<%= customer.full_names %>"
                      data-customer_id="<%= customer.id %>"
                      data-whatsapp_opt_in="<%= customer.whatsapp_opt_in || false %>"
                      >
                    <i class="fab fa-whatsapp fz-16 mr-5"></i>
                    Enviar Notificación</label></div>
                  <% end %>
                </div>
                <div class="col-xs-12 col-sm-3 hide-on-sm-and-down">
                  <div class="box">
                    <div class="row">
                      <div class="col-xs-4 col-sm-6 item__descriptor">Completadas:</div>
                      <div class="col-xs-2 col-sm-6"><%= customer.orders_success_count %></div>
                      <div class="col-xs-4 col-sm-6 item__descriptor">Pendientes:</div>
                      <div class="col-xs-2 col-sm-6"><%= customer.orders_pending_count %></div>
                      <div class="col-xs-4 col-sm-6 item__descriptor">Canceladas:</div>
                      <div class="col-xs-2 col-sm-6"><%= customer.orders_cancelled_count %></div>
                    </div>
                  </div>
                </div>
                <div class="col-xs-12 col-sm-1 t-center">
                  <b class="c-green">$<%= customer.earnings %></b>
                </div>
                <div class="col-xs-4 col-sm-2 c-grey t-center">
                  <div class="t-center truncate"><%= customer.notes %></div>
                  <% if customer.notes.present? %>
                    <label for="modal--toggle" class="c-secondary modal__toggler"
                      data-customer_full_names="<%= customer.full_names %>"
                      data-customer_notes="<%= customer.notes %>">Ver más</label>
                  <% end %>
                </div>
                <div class="hide-on-1080-and-down col-sm-1">
                  <label class="item__dropdown dropdown d-inline">
                    <a class="dropdown__button middle t-center no-style" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_customer_path(current_retailer, customer), class: 'c-black no-style' do %>
                          <i class="far fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_retailers_customer_path(current_retailer, customer), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Editar
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
                <div class="hide-on-sm-and-down hide-on-2k m-auto">
                  <label class="item__dropdown dropdown d-inline">
                    <a class="dropdown__button midd" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_customer_path(current_retailer, customer), class: 'c-black no-style' do %>
                          <i class="far fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_retailers_customer_path(current_retailer, customer), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Editar
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
              </div>
            <% end %>
            <div class="row middle-xs center-xs">
              <div class="col-xs-12">
                <%= paginate @customers %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bubble hide-on-pc">
  <%= link_to new_retailers_customer_path do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<input type="checkbox" class="d-none" name="modal--toggle" id="modal--toggle" />
<div class="modal">
  <div class="container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-xs-12 col-md-8 middle">
        <label class="modal__background" for="modal--toggle"></label>
        <div class="modal__window box p-16">
          <div class="row middle-xs">
            <div class="col-xs-8 col-sm-8">
              <h1 id="customer_name" class="d-inline name"></h1>
            </div>
            <div class="col-xs-4 col-sm-4">
              <div class="index__ctas f-right">
                <label class="btn btn--no-border c-red" for="modal--toggle">
                  <i class="fas fa-times mr-5"></i>
                  Cerrar
                </label>
              </div>
            </div>
          </div>
          <div class="divider"></div>
          <div class="row">
            <div class="col-xs-12">
              <div>Notas</div>
            </div>
            <div class="col-xs-12">
              <p class="c-gray-label" id="customer_notes"></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<input type="checkbox" class="d-none" name="modal--toggle-index" id="modal--toggle-index" />
<div class="modal-index">
  <div class="container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-xs-12 col-md-8 middle">
        <label class="modal-index__background" for="modal--toggle-index"></label>
        <div class="modal-index__window box p-4 h-unset mt-0" style="z-index: 1000;">
          <label class="modalindex__close" for="modal--toggle-index">
            <i class="fs-22 mt-4 mr-4 f-right far fa-times-circle"></i>
          </label>
          <div class="row">
            <div class="col-xs-12">
              <div class="col-md-12">
                <h1 id="customer_name_index" class="d-inline name mb-10"></h1>
                <input type="hidden" id="customer_id_index">
              </div>
              <div class="divider"></div>
              <div id="karix-templates-list">
                <% current_retailer.whatsapp_templates.active.each_with_index do |template, index| %>
                  <div class="row">
                    <div class="col-md-10">
                      <p id="template-<%= index %>"><%= template.text %></p>
                    </div>
                    <div class="col-md-2">
                      <button onClick="setKarixTemplate(<%= index %>)">Seleccionar</button>
                    </div>
                  </div>
                <% end %>
              </div>
              <div id="karix-template-edition" class="col-xs-12">
                <div id="karix-template-text">
                </div>
                <div class="row mt-30">
                  <div class="col-md-6 t-right">
                    <button onClick="cancelTemplate()">Cancelar</button>
                  </div>
                  <div class="col-md-6 t-left">
                    <button onClick="sendTemplate()">Enviar</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script charset="utf-8">
  document.addEventListener("DOMContentLoaded", function() {
    document.getElementById('modal--toggle').checked = false;

    $('#order-list li').each(function(index, li) {
      if ($(li).attr('value') === $('#q_s').val()) {
        $('#selected-order').html($(li).html());
      }
    });
  });

  $('#order-list li').on('click', function() {
    $('#selected-order').html($(this).html());
    $('#q_s').val($(this).attr('value'));
    $('#order-list').hide();
  });

  $('#order-link').on('click', function() {
    $('#order-list').show();
  });

  document.querySelectorAll('.modal__toggler').forEach(function(mt) {
    mt.onclick = function(e) {
      document.getElementById('customer_name').innerHTML = mt.dataset.customer_full_names;
      document.getElementById('customer_notes').innerHTML = mt.dataset.customer_notes;
    }
  });

  document.querySelectorAll('.ws-contact').forEach(function(mt) {
    mt.onclick = function(e) {
      document.getElementById('customer_name_index').innerHTML = mt.dataset.customer_full_names;
      document.getElementById('customer_id_index').value = mt.dataset.customer_id;
    }
  });

  $(document).ready(function() {
    $('#modal--toggle-index').on('change', function(e) {
      $('body').toggleClass('o-hidden');
    })

    $('#karix-template-edition').hide();
    $('.ws-contact').show();
  });
</script>

<script src="<%= asset_path 'retailers/customers/customers.js' %>" charset="utf-8"></script>
