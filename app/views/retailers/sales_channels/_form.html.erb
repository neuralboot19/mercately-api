<div class="box">
  <div class="row">
    <%= form_for([:retailers, @sales_channel], url: @sales_channel.new_record? ? retailers_sales_channels_path(current_retailer, @sales_channel) : retailers_sales_channel_path(current_retailer, @sales_channel), local: true, html: { class: 'validate-form p-0 col-xs-12' }) do |f| %>
      <div class="box">
        <div class="row">
          <fieldset class="col-xs-12 fieldset mt-16">
            <legend>Información del canal de venta</legend>
            <div class="mb-8 my-16">
              <%= f.label :title, 'Título' %><br/>
              <%= f.text_field :title, class: 'input validate-required' %>
              <i class="validation-msg"></i>
            </div>
            <div class="btn-box col-xs-12">
              <%= f.submit 'Guardar', class: 'btn-btn btn-submit', data: { disable_with: false } %>
            </div>
          </fieldset>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script charset="utf-8">
  <% if @sales_channel&.errors&.any? %>
    <% @sales_channel.errors.each do |attribute, message| %>
      showtoast("<%= message %>")
    <% end %>
  <% end %>
</script>
