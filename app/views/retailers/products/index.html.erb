<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Price</th>
      <th>Available quantity</th>
      <th>Buying mode</th>
      <th>Condition</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.category_id %></td>
        <td><%= product.price %></td>
        <td><%= product.available_quantity %></td>
        <td><%= product.buying_mode %></td>
        <td><%= product.condition %></td>
        <td><%= product.description %></td>
        <td><%= link_to 'Show', retailers_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_retailers_product_path(product) %></td>
        <td><%= link_to 'Destroy', retailers_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

