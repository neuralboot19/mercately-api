<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Editar producto</h1>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to retailers_products_path(current_retailer.slug, current_retailer.web_id, q: { 'status_eq': @product.status == 'active' ? '0' : '1', 's': 'created_at desc' }), class: 'btn btn--cta' do %>
              <i class="fas fa-arrow-left mr-5"></i>
              Atr√°s
            <% end %>
            <%= link_to retailers_product_path(current_retailer.slug, current_retailer.web_id, @product), class: 'btn btn--cta' do %>
              <i class="fas fa-eye mr-5"></i>
              Ir al producto
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <%= render 'form', product: @product %>
        </div>
      </div>
    </div>
  </div>
</div>
