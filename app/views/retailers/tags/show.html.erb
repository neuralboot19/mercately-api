<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline name">Etiqueta</h1>
        </div>
        <div class="col-xs-12 col-md-8 mt-16 t-right button-sm-and-down">
          <%= link_to retailers_tags_path, class: 'btn btn--cta' do %>
            <i class="fas fa-arrow-left mr-5"></i>
            Volver
          <% end %>
          <%= link_to edit_retailers_tag_path(current_retailer, @tag), class: 'btn btn--cta' do %>
            <i class="far fa-edit mr-5"></i>
            Editar
          <% end %>
          <%= link_to retailers_tag_path(current_retailer, @tag), method: :delete, data: { confirm: 'Estás seguro de eliminar la etiqueta?' }, class: 'btn btn--destroy' do %>
            <i class="far fa-trash-alt mr-5"></i>
            Eliminar
          <% end %>
        </div>
      </div>
    </div>
    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <fieldset class="fieldset mt-16">
            <legend>Información de la etiqueta</legend>
            <div class="box pt-25">
              <div class="row">
                <div class="col-xs-12 col-sm-3">
                  <p class="m-0">
                    <label class="c-grey fs-14">Etiqueta:</label><br /><span class="c-secondary fs-14"><%= @tag.tag %></span>
                  </p>
                </div>

                <div class="col-xs-12 col-sm-3">
                  <p class="m-0">
                    <label class="c-grey fs-14">Color:</label>
                    <div class='tag-content' style="background-color: <%= @tag.tag_color %>;
                    border-color: <%= @tag.font_color %>;"></div>
                  </p>
                </div>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
