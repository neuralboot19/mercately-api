<div class="container-fluid reduced-container-padding mb-16">
  <div class="card">
    <div class="container-fluid index">
      <div class="row middle-xs">
        <div class="col-xs-12 col-sm-4">
          <h1 class="d-inline index__title">Etiquetas</h1>
          <div class="index__desc">
            Lista de etiquetas
          </div>
        </div>
        <div class="col-xs-12 col-sm-8 hide-on-tablet-and-down">
          <div class="index__ctas f-right">
            <%= link_to new_retailers_tag_path, class: 'btn btn--cta' do %>
              <i class="fas fa-plus mr-5"></i>
              Crear etiqueta
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="container-fluid products">
      <div class="row">
        <div class="col-xs-12">
          <div class="table box">
            <div class="table__header row hide-on-tablet-and-down">
              <div class="col-sm-11">Etiqueta</div>
              <div class="col-sm-1"></div>
            </div>
            <% @tags.each do |tag| %>
              <div class="divider"></div>
              <div class="table__item row middle-xs">
                <div class="col-xs-10 col-sm-11">
                  <div class=""><%= tag.tag %></div>
                </div>
                <div class="hide-on-sm-and-down m-auto">
                  <label class="item__dropdown dropdown d-inline">
                    <a class="dropdown__button midd" tabindex="-1" href="#!">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </a>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_tag_path(current_retailer, tag), class: 'c-black no-style' do %>
                          <i class="fas fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_retailers_tag_path(current_retailer, tag), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Editar
                        <% end %>
                      </li>
                      <li>
                        <%= link_to retailers_tag_path(current_retailer, tag), method: :delete, data: { confirm: '¿Estás seguro de eliminar la etiqueta?' }, class: 'c-red no-style' do %>
                          <i class="fas fa-trash-alt mr-8"></i>
                          Eliminar
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
                <div class="col-xs-2 table__action-dots p-0 hide-on-md-and-up">
                  <label class="item__dropdown d-inline">
                    <div class="dropdown__button middle">
                      <i class="fas fa-ellipsis-v m-auto f-right c-black"></i>
                    </div>

                    <input type="checkbox" class="dropdown__input"/>

                    <ul class="dropdown__menu">
                      <li>
                        <%= link_to retailers_tag_path(current_retailer, tag), class: 'c-black no-style' do %>
                          <i class="fas fa-eye mr-8"></i>
                          Ver
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_retailers_tag_path(current_retailer, tag), class: 'c-black no-style' do %>
                          <i class="fas fa-edit mr-8"></i>
                          Editar
                        <% end %>
                      </li>
                      <li>
                        <%= link_to retailers_tag_path(current_retailer, tag), method: :delete, data: { confirm: '¿Estás seguro de eliminar la etiqueta?' }, class: 'c-red no-style' do %>
                          <i class="fas fa-trash-alt mr-8"></i>
                          Eliminar
                        <% end %>
                      </li>
                    </ul>
                  </label>
                </div>
              </div>
            <% end %>
            <div class="row middle-xs center-xs">
              <div class="col-xs-12">
                <%= paginate @tags %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="bubble hide-on-pc">
  <%= link_to new_retailers_tag_path do %>
    <i class="fas fa-plus"></i>
  <% end %>
</div>
