            <%= image_tag 'my-info.png', class: 'w-64 h-64 mb-16' %>
            <span class="my-account-item-title pb-8"><%= t('retailer.profile.my_account.index.my_data.title') %></span>
            <span class="my-account-item-description"><%= t('retailer.profile.my_account.index.my_data.description') %></span>
