    <ol class="breadcrumb pl-0 pb-0 mb-0 bg-transparent">
      <li class="breadcrumb-item">
        <%= link_to retailers_dashboard_path(current_retailer), class: 'no-style' do %>
          <%= t('retailer.profile.my_account.index.breadcrumb.root') %>
