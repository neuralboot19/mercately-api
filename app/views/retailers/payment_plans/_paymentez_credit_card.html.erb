<% unless purchase_plan %>
  <% if pm.present? %>
    <p class="m-0 mb-10 container-payment-plan_sub-text c-secondary">Tarjeta de crédito</p>
    <% pm.each do |payment_method| %>
      <p class="m-0 container-payment-plan_text">Nombre en la tarjeta<span class="ml-110 container-payment-plan_mobile"><%= payment_method.name %></span></p>
      <p class="m-0 container-payment-plan_text">Número de tarjeta<span class="ml-128 container-payment-plan_mobile">XXXX XXXX XXXX <%= payment_method['number'] %></span></p>
      <p class="m-0 container-payment-plan_text">Fecha de expiración
        <span class="ml-110 container-payment-plan_mobile">
          <%= "#{payment_method['expiry_month']}/#{payment_method['expiry_year']}" %>
          <% if current_retailer.paymentez_credit_cards.count > 1 %>
            <%= link_to retailers_paymentez_path(slug: current_retailer, id: payment_method['id']),
              method: :delete, data: { confirm: 'Estás seguro de eliminar esta tarjeta?' },
              class: 'btn btn--cta btn-small delete-card' do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          <% end %>
        </span>
      </p>
      <hr class="my-30">
    <% end %>
  <% end %>
<% end %>
<div class="<%= is_modal ? "container-payment-plan_add_card_modal" : "container-payment-plan_add_card" %>">
  <p class="<%= pm.present? ? "m-0 mb-10 container-payment-plan_add_card_sub-text" : "m-0 mb-10 c-secondary container-payment-plan_add_card_sub-text" %> ">Agregar Tarjeta</p>
  <form id="add-card-form" class="p-10 container-payment-plan_form">
    <div class="payment-form" id="my-card" data-capture-name="true"></div>
    <button class="btn btn--cta btn-small submit-card m-0" id="submit" type="submit" <%= 'disabled="disabled"' if purchase_plan %>>
      <i class="fas fa-credit-card mr-7" id="btn_cc"></i>
      <i class="fas fa-spinner hidden" id="btn_spinner"></i>
      <span>Agregar tarjeta <%= 'y comprar' if purchase_plan %></span>
    </button>
    <div id="messages"></div>
  </form>
</div>
