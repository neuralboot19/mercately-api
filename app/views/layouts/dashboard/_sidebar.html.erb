  <section id="sidebar--pc" class="d-none d-md-block">
    <div id="sidebar__logo--pc" class="p-18">
      <%= image_tag 'dashboard/profile.png' %>
    </div>
    <div id="sidebar__menu--pc">
      <ul class="menu no-style">
        <li class="menu__item">
