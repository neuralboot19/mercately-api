<!-- Sidebar -->
<input type="checkbox" id="sidebar--toggle" class="d-none" />
<section id="sidebar" class="hide-on-pc">
  <div id="sidebar__logo">
    <%= image_tag 'dashboard/logo.png' %>
  </div>
  <div id="sidebar__menu">
    <ul class="menu no-style">
      <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_dashboard_path(current_retailer)) %>">
        <i class="item__icon fas fa-chart-line"></i>
        <%= link_to 'Dashboard', retailers_dashboard_path(current_retailer), class: 'item__name no-style' %>
      </li>
      <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_customers_path(current_retailer)) %>">
        <i class="item__icon fas fa-users"></i>
        <%= link_to 'Clientes', retailers_customers_path(current_retailer, q: { 's': 'created_at desc' }), class: 'item__name no-style' %>
      </li>
      <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_products_path(current_retailer)) %>">
        <i class="item__icon fas fa-poll"></i>
        <%= link_to 'Productos', retailers_products_path(current_retailer, q: { 'status_eq': '0', 's': 'created_at desc' }), class: 'item__name no-style' %>
      </li>
      <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_orders_path(current_retailer)) %>">
        <i class="item__icon fas fa-clipboard-check"></i>
        <%= link_to 'Ventas', retailers_orders_path(current_retailer, status: 'all'), class: 'item__name no-style' %>
      </li>
      <% if current_retailer.whatsapp_integrated? || current_retailer.facebook_retailer || current_retailer.meli_retailer %>
        <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_templates_path(current_retailer)) %>">
          <i class="item__icon fas fa-bolt"></i>
          <%= link_to 'Respuestas Rápidas', retailers_templates_path(current_retailer), class: 'item__name no-style' %>
        </li>
      <% end %>
      <% if current_retailer.allow_bots %>
        <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_chat_bots_path(current_retailer)) %>">
          <i class="item__icon fas fa-robot"></i>
          <%= link_to 'ChatBots', retailers_chat_bots_path(current_retailer), class: 'item__name no-style' %>
        </li>
      <% end %>
      <% if current_retailer.meli_retailer %>
        <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_chats_path(current_retailer)) ||
          current_page?(retailers_questions_path(current_retailer)) %>">
          <input type="checkbox" id="item--inbox" class="item__checkbox" />
          <i class="item__icon fas fa-mail-bulk"></i>
          <label for="item--inbox" class="item__name">Inbox</label>
          <i class="item__arrow right"></i>
          <b id="item__cookie_total" class="item__cookie item__cookie_total"><%= total_unread %></b>
          <ul class="submenu no-style">
            <li class="submenu__item">
              <%= link_to 'Preguntas', retailers_questions_path(current_retailer), class: 'item__name no-style' %>
              <b id="item__cookie_question" class="item__cookie"><%= quantity_unread_questions %></b>
            </li>
            <li class="submenu__item">
              <%= link_to 'Mensajes', retailers_chats_path(current_retailer), class: 'item__name no-style' %>
              <b id="item__cookie_message" class="item__cookie"><%= quantity_unread_messages %></b>
            </li>
          </ul>
        </li>
      <% end %>
      <% if current_retailer.facebook_retailer %>
        <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_facebook_chats_path(current_retailer)) %>">
          <i class="item__icon fab fa-facebook-messenger"></i>
          <%= link_to 'Messenger', retailers_facebook_chats_path(current_retailer), class: 'item__name no-style' %>
          <b class="item__cookie item__cookie_facebook_messages"><%= facebook_unread_messages %></b>
        </li>
      <% end %>
      <% if current_retailer.whatsapp_integrated? %>
        <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_whats_app_chats_path(current_retailer)) %>">
          <i class="item__icon fab fa-whatsapp"></i>
          <%= link_to 'WhatsApp', retailers_whats_app_chats_path(current_retailer), class: 'item__name no-style' %>
          <b class="item__cookie item__cookie_whatsapp_messages"><%= whatsapp_unread_messages %></b>
        </li>
      <% end %>
      <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_business_config_path(current_retailer)) %>">
        <i class="fas fa-cog item__icon"></i>
        <%= link_to 'Configuración de negocio', retailers_business_config_path(current_retailer), class: 'item__name no-style' %>
      </li>
      <li class="menu__item m-0 <%= 'menu__item--selected' if current_page?(retailers_integrations_path(current_retailer)) %>">
        <i class="item__icon fas fa-link"></i>
        <%= link_to 'Integraciones', retailers_integrations_path(current_retailer), class: 'item__name no-style' %>
      </li>
      <% if session[:old_retailer_id] %>
        <li class="menu__item m-0">
          <%= link_to "Regresar al administrador", go_back_as_admin_admin_retailer_path(current_retailer) %>
        </li>
      <% end %>
    </ul>
  </div>
</section>

