<!DOCTYPE html>
<html lang="es-EC">
  <head>
    <title><%= meta_title %></title>
    <meta name="description" content="<%= meta_description %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'pages', media: 'all' %>
    <%= javascript_include_tag 'pages' %>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;600;800&display=swap" rel="stylesheet">
    <%= render "layouts/head" %>
  </head>

  <body>
    <% if ENV['ENVIRONMENT'] == 'production' %>
      <!-- Google Tag Manager (noscript) -->
      <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-W8FF76S"
      height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
      <!-- End Google Tag Manager (noscript) -->
    <% end %>

    <%= render 'layouts/pages_new/header' %>
    <%= yield %>
    <div class="bubble ws-bubble">
      <%= link_to 'https://api.whatsapp.com/send?l=es&phone=593989083446&text=Hola%20quiero%20saber%20mÃ¡s%20de%20Mercately.com', target: '_blank' do %>
        <i class="fab fa-whatsapp"></i>
      <% end %>
    </div>
  </body>

  <% if notice %>
    <script charset="utf-8">
      document.addEventListener("DOMContentLoaded", function() {
        showtoast("<%= notice %>")
      });
    </script>
  <% end %>
</html>
