<input type="checkbox" class="d-none" name="event-modal" id="event-modal" />
<div class="modal">
  <div class="container">
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-xs-12 col-md-8 middle">
        <label class="modal__background" for="event-modal"></label>
        <div class="modal__window box p-16">
          <div class="row middle-xs">
            <div class="col-xs-8 col-sm-8">
              <h1 class="d-inline name">Nuevo evento</h1>
            </div>
            <div class="col-xs-4 col-sm-4">
              <div class="index__ctas f-right">
                <label class="btn btn--no-border c-red" for="event-modal">
                  <i class="fas fa-times mr-5"></i>
                  Cerrar
                </label>
              </div>
            </div>
          </div>
          <div class="divider my-0"></div>

          <div class="container">
            <div class="row">
              <%= form_tag retailers_calendar_events_path(current_retailer), id: 'new_event', class: 'validate-form w-100 p-0' do %>
                <%= render 'layouts/calendar/event_fields', cache: true %>
                <div class="my-16 t-right">
                  <%= submit_tag 'Guardar', class: 'btn-btn btn-submit btn-primary-style', data: { disable_with: false } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
