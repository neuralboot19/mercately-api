<style type="text/css">

  
  .menu-item-with-mega-menu span {
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2px;
    color: #753581;
    -webkit-transition: color, 0.35s, easy;
    transition: color, 0.35s, easy;
    cursor: pointer;  
  }

  .menu-item-with-mega-menu span.normal-item{
    color: #000;
  }
  
  
  .no-list {
    list-style: none;
  }

  .btn-without-shadow {
    -webkit-box-shadow: none;
    box-shadow: none;
  }

  .header-btn-start {
    padding: 10px 30px !important;
    border-radius: 30px;
    color: #FFF !important;
    background-color: #753581;
  }

  .header-btn-start:hover{
    color: #FFF;
    background-color: #753581;
    border-color: #753581;
    outline: none;
    outline: 0;
  }

  .header-btn-login {
    padding: 10px 30px !important;
    border-radius: 30px;
    color: #753581 !important;
    border: 1px solid #753581 !important;
    background-color: #FFF;
  }

  .header-btn-login:hover{
    color: #FFF !important;
    background-color: #753581;
    border-color: #753581;
    outline: none;
    outline: 0;
    transition-delay: 0s;
    transition-duration: 0.25s;
    transition-property: all;
    transition-timing-function: ease-out;
  }

  .main-nav-item{
    margin-right: 25px;
  }
  
</style>




<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a href='/'><%= image_tag 'landing/logo.png', alt: 'Mercately logo' %></a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <ul class="navbar-nav ml-auto  main-nav-item">
        <li class="nav-item menu-item-with-mega-menu">
          <%= link_to blog_path, class: "nav-link" do %>
            <span class="normal-item">Blog</span>
          <% end %>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item menu-item-with-mega-menu">
          <%= link_to new_retailer_user_registration_path, class: 'nav-link' do  %>
            <span class="header-btn-start">Empezar</span>
          <% end %>
        </li>
        <li class="nav-item menu-item-with-mega-menu">
          <%= link_to new_retailer_user_session_path, class: "nav-link" do %>
            <i class="icon icon-user"></i><span class="header-btn-login">Ingresar</span>
          <% end %>
        </li>
      </ul>
    </ul>
  </div>
</nav>
