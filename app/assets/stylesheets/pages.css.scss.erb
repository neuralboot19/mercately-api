@import "bootstrap";
@import 'font_awesome5_webfont';
@import 'blogs';

.hero-2 {
  text-align: left;
  padding-top: 2rem;
  padding-bottom: 2rem;
}

.hero-2 .hero-heading {
  margin-bottom: 10.9375rem;
  margin-left: 2.5rem;
}

.hero-pre-title,
.section-header h2 {
  font-size: 0.875rem;
  font-weight: 600;
  text-transform: uppercase;
}

.claim,
.hero p.hero-claim {
  line-height: 3.125rem;
  font-size: 2.25rem;
}

.btn-group-large {
  font-size: 0;
}

.btn-group-large>.btn,
.btn-group-large [class*="link-"] {
  margin-right: 30px;
}

.btn-large {
  padding: 0.625rem 3.125rem;
  font-size: 0.875rem;
  line-height: 28px;
  border-radius: 30px;
  text-transform: uppercase;
}

.btn-purple {
  color: #FFF;
  background-color: rgb(117, 53, 128);
  border-color: rgb(117, 53, 128);
  -webkit-box-shadow: 0 0 10px 0 #6a5aff;
  box-shadow: 0 0 10px 0 rgb(117, 53, 128);
  outline: 0;
  position: relative;
}

.btn-purple:hover {
  color: #FFF;
}

.btn-white {
  color: rgb(0, 180, 255);
  background-color: #FFF;
  border-color: rgb(0, 180, 255);
  -webkit-box-shadow: 0 6px 13px 0 rgba(0, 0, 0, 0.05);
  box-shadow: 0 6px 13px 0 rgba(0, 0, 0, 0.05);
  outline: 0;
}

.btn-white:hover {
  color: #FFF;
  background-color: rgb(0, 180, 255);
}

.hero-rodo .hero-heading {
  margin-top: 7rem;
}

.hero-img img {
  max-width: 750px;
  position: absolute;
  left: -85px;
}

.hero-text {
  font-size: 0.875rem;
  margin: 0 0 25px 0;
  line-height: 1.875rem;
  color: #6F7982;
}

.wa-hero {
  width: 60px;
  margin-bottom: 5px;
  margin-left: -10px;
}


/******** Section 2 ******/
.section-explanation {
  padding: 50px 0px;
}

.section-exp-img img {
  max-width: 350px;
}

.section-explanation-text {
  margin-top: 7rem;
}



.section-explanation-text .title-explanation-holder {
  text-align: center;
}

.section-explanation-text .title-explanation-holder h2 {
  line-height: 3.125rem;
  font-size: 2.25rem;
  font-weight: bolder;
}

.section-explanation-text p {
  font-size: 0.875rem;
  line-height: 1.875rem;
  margin-top: 0;
  color: #6F7982;
  font-family: "proxima_nova";
}

.text-center {
  text-align: center;
}

.section-explanation-reason .main-reason {
  text-align: center;
  font-size: 2.5rem;
  font-weight: bolder;
  color: #00B4FF;
}

.section-explanation-reason .second-reason {
  text-align: center;
  color: #000;
  font-weight: bolder;
  line-height: 1.275rem;
}

.section-explanation-cta {
  margin-top: 25px;
}


/* Features*/

.main-title {
  text-align: center;
}

.feature-img-holder {
  /*width: 50%;*/
}

.feature-text-holder {}

.feature-img-holder {
  vertical-align: bottom;
  text-align: center;
}

.section-features {
  padding: 50px 0;
}

.feature-text-holder .title {
  font-size: 1.25rem;
  text-align: initial;
  font-weight: bold;
  line-height: 1.375rem;
}

.feature-text-holder .text {
  font-size: 0.875rem;
  line-height: 1.875rem;
  margin-top: 0;
  color: #6F7982;
  font-family: "proxima_nova";
}

.ma-ver-50 {
  margin-top: 50px;
}

@keyframes bounceIn {

  0% {
    transform: scale(1);
  }

  100% {
    transform: scale(1.05);
  }
}

.feature-wrapper {
  background-color: rgb(248, 248, 248);
  text-align: center;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px 0px;
  padding: 50px 10px;
}

.feature-wrapper:hover {
  animation: bounceIn forwards .5s;
}


/* Section Transform*/

.section-transform {
  background-color: rgb(248, 248, 248);
  padding: 50px 0px;
}

.section-transform .main-title {
  margin-bottom: 50px;
}

.section-transform .section-exp-img {
  text-align: center;
}

.section-transform .feature-explanation {
  margin-bottom: 50px;
}

/*Section clients*/

.sections-clients {
  padding: 50px 0px;
}

.sections-clients .recomendation-wrapper {
  margin-top: 1.25rem;
  padding: 2.1875rem;
  background: #F7F7F7;
  border-radius: 10px;
  color: #6F7982;
  line-height: 1.875rem;
  font-size: 0.875rem;
  min-height: 220px;
  -webkit-transition: -webkit-box-shadow 0.3s;
  transition: -webkit-box-shadow 0.3s;
  transition: box-shadow 0.3s;
  transition: box-shadow 0.3s, -webkit-box-shadow 0.3s;
}

.sections-clients .recomendation-wrapper:hover {
  box-shadow: 0 0px 30px rgba(0, 0, 0, 0.1);
}

.sections-clients .recomendation-wrapper .recommend-img {
  width: 75px;
  border-radius: 50%;
  margin-bottom: 10px;
  background-color: #fff;
}

/* FAQs */

.sections-faqs {
  padding: 80px 0px;
}

.section-faq-header {
  opacity: 0.75;
}

.image-overflow-container-2 {
  background-color: rgba(0, 0, 0, 0) !important;
  background-image: url(asset_path('whatsapp_api/curve2.png')) !important;
  background-size: cover !important;
  background-position-x: 50%;
}

.sections-faqs {
  background-color: rgba(0, 0, 0, 0) !important;
  background-image: url(asset_path('whatsapp_api/bg5.png'));
  background-size: cover !important;
  background-repeat: no-repeat !important;
}

.center-landing {
  display: flex;
  justify-content: center;
  align-items: center;
}

footer {
  background: #0e1022;
  padding: 4em;
  padding-bottom: 1em;
}

#footer-logo {
  width: 265px;
}
