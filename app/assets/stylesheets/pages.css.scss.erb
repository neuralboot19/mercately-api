@keyframes bounceIn {
 
  0% {
    transform: scale(1);
	}
	100% {
	    transform: scale(1.05);
	}
}

.feature-wrapper {
  background-color: rgb(248, 248, 248);
  text-align: center;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 3px 6px 0px;
  padding: 50px 10px;
}

.feature-wrapper:hover {
  animation: bounceIn forwards .5s;
}


/* Section Transform*/

.section-transform{
	background-color: rgb(248, 248, 248);
	padding: 50px 0px;
}

.section-transform .main-title {
	margin-bottom: 50px;
}

.section-transform .section-exp-img {
	text-align: center;
}

.section-transform .feature-explanation {
	margin-bottom: 50px;
}

/*Section clients*/

.sections-clients {
	padding: 50px 0px;
}

.sections-clients .recomendation-wrapper {
	margin-top: 1.25rem;
	padding: 2.1875rem;
	background: #F7F7F7;
	border-radius: 10px;
	color: #6F7982;
	line-height: 1.875rem;
	font-size: 0.875rem;
	min-height: 220px;
	-webkit-transition: -webkit-box-shadow 0.3s;
	transition: -webkit-box-shadow 0.3s;
	transition: box-shadow 0.3s;
	transition: box-shadow 0.3s, -webkit-box-shadow 0.3s;	
}

.sections-clients .recomendation-wrapper:hover {
	box-shadow: 0 0px 30px rgba(0,0,0,0.1);
}

.sections-clients .recomendation-wrapper .recommend-img {
	width: 75px;
	border-radius: 50%;
	margin-bottom: 10px;
	background-color: #fff;
}

